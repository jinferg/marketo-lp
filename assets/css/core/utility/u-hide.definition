// Hide Utility
// ============================================================

.u-hide {
  display: none !important;
  @media @tablet {
    &-tb {
      display: none !important;
    }
  }
  @media @laptop {
    &-lp {
      display: none !important;
    }
  }
  @media @desktop {
    &-dk {
      display: none !important;
    }
  }
}

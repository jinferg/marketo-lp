// Grid Layout
// ============================================================

.l-grid {
	display: grid;
  &__area {
    &.-header {
      grid-area: header;
    }
    &.-sidebar {
      grid-area: sidebar;
    }
    &.-content {
      grid-area: content;
    }
    &.-footer {
      grid-area: footer;
    }
  }
}
